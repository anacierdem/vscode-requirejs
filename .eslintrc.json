{
    "extends": [
        "./node_modules/goodparts/.eslintrc.js"
    ],
    "env": {
        "browser": false,
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "no-var": "error",
        "max-lines": "warn",
        "max-len": [
            "warn",
            { 
                "code": 120,
                "ignoreComments": true 
            }
        ],
        "max-depth": ["warn"],
        "complexity": ["warn"],
        "no-undefined": "off"
    },
    "globals": {
        "resolve": true
    }
}